{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "lib": ["es2016", "dom"],
    "types": ["cypress"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": true,
    "outDir": "build/main",
    "moduleResolution": "node",
    "typeRoots": [
      "./src/types"
    ],
    "paths": {
      "@swimlane/cy-dom-diff": ["src"],
      "@swimlane/cy-dom-diff/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "index.d.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
