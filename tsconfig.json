{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "outDir": "./",
    "module": "es2015",
    "strict": true,
    "lib": ["es2017", "dom"],
    "types": ["cypress"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": false,
    "moduleResolution": "node",
    "typeRoots": [
      "src/types"
    ],
    "paths": {
      "@swimlane/cy-dom-diff": ["./src/"],
      "@swimlane/cy-dom-diff/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
